<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ForumATU</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <base href="https://forum.elma-bpm.ru/">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,800,800italic,700,700italic,400italic,600,600italic,300italic&amp;subset=latin,cyrillic" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css.php?css=xenforo,form,public&amp;style=2&amp;dir=LTR&amp;d=1605699363">
    <link rel="stylesheet" href="/css.php?css=bb_code,new_adaptive,node_category,node_forum,node_list,profile_post_list_simple,sidebar_share_page,thread_list_simple,wf_default&amp;style=2&amp;dir=LTR&amp;d=1605699363">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <style>
        #content.content .pageContent {
            background: none;
            box-shadow: none;
        }
    </style>
</head>
<body>
<header>
    <div id="header">
        <div class="logo">
            <a class="img" asp-action="Index" asp-controller="Home">
                <svg class="icon icon-logo"></svg>
            </a>
            <a class="logo-link" asp-action="Index" asp-controller="Home"><span>Community</span>
            </a>
            @* <span class="subtitle">Forum of students of Almaty Technological University</span> *@
            <!--<span class="subtitle">Форум студентов of Almaty Technological University</span>-->
            <span class="subtitle">Форум студентов Алматинского технологического университета</span>
        </div>

        <ul class="menu sup_menu">
            <li><a href="https://eva.elma-bpm.ru/" target="_blank" class="academy"><span>Академия</span></a></li>
            <li>
                <a href="https://atu.kz/" target="_blank">
                    <svg class="icon icon-demo" style="background-image: url(/images/planet.svg)"></svg>
                    <span>Сайт</span></a></li>
            <li>
                <a href="https://univer.atu.kz/" target="_blank" class="kb"><span>База знаний</span></a></li>
            <li>
                <a href="login" class="OverlayTrigger">
                    <svg class="icon icon-input" style="background-image: url(/images/login.svg)"></svg>
                    <span>Войти</span></a>
            </li>
        </ul>


        <div class="search-block">
            <span id="QuickSearchPlaceholder" title="Поиск">Поиск</span>
            <form action="search/search" method="post" class="">
                <input type="search" name="keywords" value="" class="textCtrl" placeholder="Поиск..." title="Введите параметры поиска и нажмите ввод" id="QuickSearchQuery">
                <button type="submit" value="Поиск" class="" title="Искать">
                    <svg class="icon icon-search">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="https://forum.elma-bpm.ru/#elma-search"></use>
                    </svg>
                </button>
                <input type="hidden" name="_xfToken" value="">
            </form>
        </div>
        <div class="clearfix"></div>
        <div class="header-hr"></div>
        <div class="breadBoxTop ">
            <nav>
                <span class="crumbs">
                </span>
            </nav>
        </div>

        <div class="change-language" id="change-language">
            <div id="change-language-div" onclick="this.getElementsByTagName('ul')[0].classList.toggle('active')">
                <span id="change-language-span">
                    <span class="icon icon-flag_ru"></span>RUS</span>
                <ul>
                </ul></div>
        </div>
        <script>
                window.onload = function () {
                    document.body.onclick = function (e) {
                        e = e || event;
                        target = e.target || e.srcElement;
                        if (target.id == "change-language" || target.id == "change-language-div" || target.id == "change-language-span") {
                        } else {
                            document.getElementById('change-language').getElementsByTagName('ul')[0].classList.remove('active');
                        }
                    }
                }
            </script>
        <div style="clear:both;"></div>
    </div>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer >
    <div class="footer">
            <div class="pageContent">
                <ul class="footerLinks">
                    <li><a href="misc/contact" class="OverlayTrigger" data-overlayoptions="{&quot;fixed&quot;:false}">Обратная связь</a></li>
                    <li><a href="help/">Помощь</a></li>
                    <li><a href="https://forum.elma-bpm.ru/" class="homeLink">Главная</a></li>
                    <li><a href="#header" onclick="window.scrollTo(0, 0); return false;" class="topLink">Вверх</a></li>
                </ul>
                <span class="helper"></span>
            </div>
        </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>